<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.srivastava.friends.Setting_Alert"><FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make your profile public:"
                android:id="@+id/lblPrivacy"
                android:layout_weight="20" />

            <Spinner
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/spPrivacy"
                android:layout_weight="80" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow push notifications"
                android:id="@+id/lblNotifications"
                android:layout_weight="20" />

            <Spinner
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/spNotifications"
                android:layout_weight="80" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow friends to message you"
                android:id="@+id/lblAllowMsgs"
                android:layout_weight="20" />

            <Spinner
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/spMsgs"
                android:layout_weight="80" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>



</RelativeLayout>
